@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div id="carouselExampleIndicators" class="carousel slide card" data-ride="carousel">
                <ol class="carousel-indicators m-5">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-50" src="https://net3marketing.com/wp-content/uploads/2013/12/1200x6001.gif" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-50" src="https://net3marketing.com/wp-content/uploads/2013/12/1200x6001.gif" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-50" src="https://net3marketing.com/wp-content/uploads/2013/12/1200x6001.gif" alt="Second slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon sr-only">Prev</span>
                </a>                
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>
</div>

<div class="container mt-3 mb-4">
    <div class="row">
        <div class="col-sm">
            <div class="card-body">
                <div class="row">
                    @foreach (var product in Model.ProductList)
                    {
                        <div class="col-md-4">
                            <partial name="_ProductItemPartial" model="@product" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>