@model 						ProductModel


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <div class="card">
        <form method="post">
        <a asp-page="ProductDetail" asp-route-productId="@Model.Id"><img asp-append-version="true" class="img-fluid border-0" src="https://via.placeholder.com/600/b0f7cc" alt="Card image cap"></a>
            <div class="card-body">
                <h4 class="card-title text-center"><a asp-page="ProductDetail" asp-route-productId="@Model.Id" title="View Product">@Model.Name</a></h4>
                <div class="row">
                    <div class="col">
                        <p class="btn btn-dark btn-block">@Model.Price $</p>
                    </div>
                    <div class="col">
                    <button asp-page="Index" asp-route-productId="@Model.Id" asp-page-handler="AddProductToCart" class="btn btn-dark text-white btn-block">View</button>
                    </div>
                </div>
            </div>
            </form>
    </div>
</div>
